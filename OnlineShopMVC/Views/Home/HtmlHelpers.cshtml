@using OnlineShopMVC.Services;
@{
    ViewData["Title"] = "Html Helpers";
}

<div>
    <h2 class="text-center">@ViewData["Title"]</h2>

    @Html.CreateCustomHeader("Header html helper", new StyleInfo("#806703", "cursive", 30))

    <br><br>

    <h4>Date html helper:</h4>
    @Html.CreateCurrentDate("green")
