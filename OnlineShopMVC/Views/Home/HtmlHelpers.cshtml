    <br><br>

    <h4>Email html helper:</h4>
    @Html.CreateEmailLink("someone", new StyleInfo("#0080ab", "sans-serif", 20))

    <br><br>

    <h4>Product info html helper:</h4>
    @{
        Product chicken = new Product("Chicken", 3884, "Voonyx", "In felis", 378);
